        </StackPanel>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <StackPanel x:Name="stckPanel1"
                        Width="800"
                        Height="60"
                        Orientation="Horizontal"
                        Background="White">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Margin"
                                Value="10 0 0 0" />
                    </Style>
                </StackPanel.Resources>

            </StackPanel>

            <StackPanel x:Name="stckPanel2"
                        Width="800"
                        Height="60"
                        Orientation="Horizontal"
                        Background="White">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Margin"
                                Value="10 0 0 0" />
                    </Style>
                </StackPanel.Resources>

            </StackPanel>



            <StackPanel Orientation="Horizontal">
                <Grid Width="800"
                      Margin="0 50 0 0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="550" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1">
                        <StackPanel Orientation="Horizontal">

                            <Border Height="53"
                                    Width="303"
                                    CornerRadius="5"
                                    Background="LightGray"
                                    x:Name="borderOfWriteBox">
                                <TextBox x:Name="tboxWrite"
                                         Height="50"
                                         Width="300"
                                         VerticalContentAlignment="Center"
                                         FontSize="25"
                                         Padding="5 0 0 0"
                                         Background="LightGray"
                                         BorderThickness="0" />
                            </Border>

                            <Label x:Name="lblTimer"
                                   Content="60"
                                   Width="50"
                                   Height="40"
                                   Margin="20 0 0 0"
                                   Style="{StaticResource TimerLabelTheme}"
                                   Background="#3c4d5c"
                                   Foreground="White" />

                            <Button x:Name="btnRefresh"
                                    Width="50"
                                    Height="40"
                                    Margin="20 0 0 0"
                                    Content="Refresh"
                                    Style="{StaticResource RefreshButtonTheme}"
                                    Background="#428bca"
                                    Foreground="White" />


                        </StackPanel>
                    </Grid>

                </Grid>

            </StackPanel>


        </StackPanel>

    </Grid>

